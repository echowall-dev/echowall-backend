{
  "name": "Account",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "uuid": {
      "type": "string",
      "defaultFn": "uuidv4"
    },
    "givenName": {
      "type": "string",
      "required": true
    },
    "familyName": {
      "type": "string",
      "required": true
    },
    "middleName": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "birthdate": {
      "type": "date"
    },
    "description": {
      "type": "string"
    },
    "phoneNumber": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "default": "user"
    },
    "status": {
      "type": "string",
      "default": "valid"
    },
    "lastLogin": {
      "type": "date",
      "default": null
    },
    "locale": {
      "type": "string",
      "default": "en"
    },
    "postCreateCount": {
      "type": "number",
      "default": 0
    },
    "postCollaborateCount": {
      "type": "number",
      "default": 0
    },
    "postLikeCount": {
      "type": "number",
      "default": 0
    },
    "bubbleCount": {
      "type": "number",
      "default": 0
    },
    "commentCount": {
      "type": "number",
      "default": 0
    },
    "followerCount": {
      "type": "number",
      "default": 0
    },
    "followeeCount": {
      "type": "number",
      "default": 0
    },
    "friendCount": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "propic": {
      "type": "embedsOne",
      "model": "Image",
      "property": "propic"
    },
    "avatar": {
      "type": "embedsOne",
      "model": "Image",
      "property": "avatar"
    },
    "postCreate": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "creatorId"
    },
    "postCollaborate": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "collaboratorId",
      "through": "Collaboration",
      "keyThrough": "postId"
    },
    "postLike": {
      "type": "hasMany",
      "model": "Post",
      "foreignKey": "likerId",
      "through": "LikePost",
      "keyThrough": "postId"
    },
    "bubbles": {
      "type": "hasMany",
      "model": "Bubble",
      "foreignKey": "creatorId"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "creatorId"
    },
    "objectUsers": {
      "type": "hasMany",
      "model": "Account",
      "foreignKey": "subjectUserId",
      "through": "Relationship",
      "keyThrough": "objectUserId"
    },
    "subjectUsers": {
      "type": "hasMany",
      "model": "Account",
      "foreignKey": "objectUserId",
      "through": "Relationship",
      "keyThrough": "subjectUserId"
    }
  },
  "acls": [],
  "methods": {
    "prototype.postFetch": {
      "accepts": [
        {
          "arg": "amount",
          "type": "number",
          "required": false,
          "description": "The amount of posts to fetch"
        },
        {
          "arg": "lastFetchTime",
          "type": "date",
          "required": false,
          "description": "The timestamp of last fetch"
        }
      ],
      "returns": [
        {
          "arg": "posts",
          "type": "array",
          "root": false,
          "description": "A list of available posts"
        }
      ],
      "description": "Fetch available posts",
      "http": [
        {
          "path": "/postFetch",
          "verb": "get"
        }
      ]
    },
    "prototype.follow": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true,
          "description": "The ID of the target user"
        }
      ],
      "returns": [
        {
          "arg": "userId",
          "type": "string",
          "root": false,
          "description": "The ID of the target user"
        },
        {
          "arg": "success",
          "type": "boolean",
          "root": false,
          "description": "The status of the follow request"
        }
      ],
      "description": "Follow another user",
      "http": [
        {
          "path": "/follow",
          "verb": "post"
        }
      ]
    },
    "prototype.unfollow": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true,
          "description": "The ID of the target user"
        }
      ],
      "returns": [
        {
          "arg": "userId",
          "type": "string",
          "root": false,
          "description": "The ID of the target user"
        },
        {
          "arg": "success",
          "type": "boolean",
          "root": false,
          "description": "The status of the unfollow request"
        }
      ],
      "description": "Unfollow another user",
      "http": [
        {
          "path": "/unfollow",
          "verb": "post"
        }
      ]
    },
    "prototype.block": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true,
          "description": "The ID of the target user"
        }
      ],
      "returns": [
        {
          "arg": "userId",
          "type": "string",
          "root": false,
          "description": "The ID of the target user"
        },
        {
          "arg": "success",
          "type": "boolean",
          "root": false,
          "description": "The status of the block request"
        }
      ],
      "description": "Block another user",
      "http": [
        {
          "path": "/block",
          "verb": "post"
        }
      ]
    }
  }
}
